<drawable
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    class="android.support.wearable.complications.rendering.ComplicationDrawable"
    app:backgroundColor="@android:color/black"
    app:borderColor="@color/brown"
    app:borderDashGap="2dp"
    app:borderDashWidth="16dp"
    app:borderRadius="51dp"
    app:borderStyle="dashed"
    app:borderWidth="1dp"
    app:highlightColor="@color/fuchsia"
    app:iconColor="@color/dark_red"
    app:rangedValuePrimaryColor="@color/teal"
    app:rangedValueRingWidth="1dp"
    app:rangedValueSecondaryColor="@color/white"
    app:textColor="@color/yellow"
    app:textSize="28sp"
    app:textTypeface="@font/vt323_font"
    app:titleColor="@color/amber"
    app:titleSize="28sp"
    app:titleTypeface="@font/vt323_font">

    <ambient
        app:highlightColor="@color/red"
        app:iconColor="@color/dark_red"
        app:rangedValuePrimaryColor="@color/dark_red"
        app:titleColor="@color/amber"
        app:borderColor="@android:color/transparent"
        app:rangedValueSecondaryColor="@android:color/transparent"/>
</drawable>